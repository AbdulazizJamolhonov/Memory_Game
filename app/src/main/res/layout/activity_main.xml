<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5263BF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#0044FF"
        android:text="@string/exit"
        android:visibility="gone"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/line_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/linear_time"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/line_1"
        app:layout_constraintLeft_toRightOf="@id/exit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_timer"
            android:src="@drawable/ic_timer"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/_00_00"
            android:textColor="@color/black"
            android:textSize="40sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_4"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_2"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_5"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_1"
        app:layout_constraintRight_toLeftOf="@id/image_3"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_6"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_7"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_5"
        app:layout_constraintTop_toBottomOf="@id/image_1"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_8"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_4"
        app:layout_constraintRight_toLeftOf="@id/image_6"
        app:layout_constraintTop_toBottomOf="@id/image_2"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_9"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_3"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_10"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_8"
        app:layout_constraintTop_toBottomOf="@id/image_4"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_11"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_7"
        app:layout_constraintRight_toLeftOf="@id/image_9"
        app:layout_constraintTop_toBottomOf="@id/image_5"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toTopOf="@id/image_12"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_6"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_11"
        app:layout_constraintTop_toBottomOf="@id/image_7"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_10"
        app:layout_constraintRight_toLeftOf="@id/image_12"
        app:layout_constraintTop_toBottomOf="@id/image_8"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toRightOf="@id/image_11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_9"
        app:layout_constraintWidth_percent="0.33"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>